package Register;

import java.util.ArrayList;
import java.util.List;

import javax.ws.rs.Consumes;
import javax.ws.rs.GET;
import javax.ws.rs.POST;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.Response;
import org.json.simple.JSONArray;
import org.json.simple.JSONObject;
import org.json.simple.JSONValue;
import org.json.simple.parser.JSONParser;
import org.json.simple.parser.ParseException;
@Path("/register")
public class RegisterResource {
	private static List<RegisterEntity> data = new ArrayList<>();
	private JSONArray list = new JSONArray();
	@POST
	@Produces("application/json")
	@Consumes("application/json")
	public Response registrar(RegisterEntity registro) throws ParseException {
		
		JSONObject a = new JSONObject();
		a.put("name", registro.getName());
		a.put("password", registro.getPassword());
		a.put("email", registro.getEmail());
		a.put("username", registro.getUsername());
		
		list.add(a);
		
		data.add(registro);
		return Response.ok("Sucess").build();
	}

	@GET
	@Produces("application/json")
	public Response getRegistros() {
		try {
			return Response.ok().entity(list).build();
		} catch (Exception ex) {
			return Response.serverError().entity(ex.getMessage()).build();
		}

	}
}
